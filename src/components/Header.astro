---
import HeaderLink from "./HeaderLink.astro";
import Hamburger from "./Hamburger.astro";
import ThemeModeButton from "./ThemeModeButton.astro";
// import { LOGO_FILE_NAME, HEADER_TITLE, SITE_URL } from "../../consts";

const baseUrl = import.meta.env.BASE_URL;
---

<header>
  <nav class="border-2 border-red-600">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <!-- <img src={`${baseUrl}/${LOGO_FILE_NAME}`} width="32px" height="32px" class="h-8" alt="Header logo" /> -->
        <span
          class="text-md md:text-2xl font-semibold whitespace-nowrap dark:text-white"
        ></span>
      </a>
      <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
        <Hamburger />
        <ThemeModeButton />
      </div>

      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-4 md:p-0 mt-4 border-2 border-gray-100 rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 dark:border-gray-600"
        >
          <HeaderLink href="/">Home</HeaderLink>
          <HeaderLink href="/video">Video</HeaderLink>
        </ul>
      </div>
    </div>
  </nav>
</header>
